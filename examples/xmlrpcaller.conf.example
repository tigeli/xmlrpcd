xmlrpcaller:
  # example:
  #   hostname: <mandatory>
  #   port: 3306
  #   url: https://<hostname>:<port>/<path>
  #   username: <required-for-http-authentication>
  #   password: <will-be-asked-if-omited>
  #   ca_file: <required-if-ca_ignore-false>
  #   ca_ignore: false
  #   verify_hostname: true
  #   timeout: 180  # TCP timeout
  rudolf:
    hostname: 192.168.2.100
    port: 16333
    username: nabla
    password: qwerty
    ca_ignore: true
  rudolf_as_url:
    # note lack of user/password in URL: these can't be set there
    url: https://192.168.2.100:16333
    username: nabla
    password: qwerty
    ca_ignore: true
  hans:
    hostname: hans.example.net
    port: 1638
    username: nabla
    ca_file: /etc/xmlrpcd/ssl/hans.cert.pem
  local:
    hostname: localhost
    port: 1638
    username: nabla
    ca_file: /etc/xmlrpcd/ssl/some-host.cert.pem
    verify_hostname: false

  # output (YAML format):
  # us000251:
  #   data: ... # $data{us000251}{data} contains data returned by RPC call
  #   exit_code: 0  # always 0 if success
  #   hostname: us000251
  # us000252:
  #   error: "500 Can't connect to 192.168.2.9:3033 (connect: No route to host)\n"
  #   exit_code: 113
  #   hostname: us000252
  # us000253:
  #   data: ~
  #   signal: 14
  #   hostname: us000253
  # ...

  multiple_hosts:
    - hostname: us000251
      username: root251
      password: pass251
      ca_file: /etc/xmlrpcd/ssl/us-all.cert.pem
    - hostname: us000252
      username: root252
      password: pass252
      ca_file: /etc/xmlrpcd/ssl/us-all.cert.pem
    - hostname: us000253
      username: root253
      password: pass253
      ca_file: /etc/xmlrpcd/ssl/us-all.cert.pem
    - hostname: us000254
      username: root254
      password: pass254
      ca_file: /etc/xmlrpcd/ssl/us-all.cert.pem

# vim:ft=yaml
